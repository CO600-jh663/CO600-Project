<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Social">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:columnCount="8"
        android:rowCount="11">

        <TextView
            android:id="@+id/social_title"
            style="@style/page_header"
            android:layout_column="1"
            android:layout_columnSpan="7"
            android:layout_row="1"
            android:text="@string/social" />

        <TextView
            android:id="@+id/divide"
            style="@style/divide"
            android:layout_column="0"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="8dp"
            android:layout_row="3"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/complete_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_gravity="end"
            android:layout_marginTop="2dp"
            android:layout_row="4"
            android:height="24dp"
            android:background="@color/kent_translucent"
            android:ems="10"
            android:text="@string/complete_list"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/divide2"
            style="@style/divide"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:layout_row="5"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/top_picks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_gravity="end"
            android:layout_marginBottom="13dp"
            android:layout_marginEnd="10dp"
            android:layout_row="6"
            android:width="190dp"
            android:height="24dp"
            android:background="@color/kent_translucent"
            android:ems="10"
            android:text="@string/top_picks"
            android:textAlignment="viewEnd"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/top_picks_images"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_marginBottom="5dp"
            android:layout_row="7"
            android:width="180dp"
            android:height="245dp" />

        <TextView
            android:id="@+id/divide3"
            style="@style/divide"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:layout_marginBottom="5dp"
            android:layout_row="8"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/interests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_gravity="end"
            android:layout_marginBottom="13dp"
            android:layout_marginEnd="10dp"
            android:layout_row="9"
            android:width="260dp"
            android:height="24dp"
            android:background="@color/kent_translucent"
            android:ems="10"
            android:text="@string/interests"
            android:textAlignment="viewEnd"
            android:textSize="20sp" />
    </GridLayout>

    <TableLayout
        android:id="@+id/user_menu"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/divide_menu"
            style="@style/divide"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/menuBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/newsBtn"
                android:layout_width="48dip"
                android:layout_height="54dip"
                android:layout_marginStart="12dp"
                android:background="@drawable/news_icon"
                android:contentDescription="@string/news" />

            <ImageButton
                android:id="@+id/calendarBtn"
                android:layout_width="42dip"
                android:layout_height="54dip"
                android:layout_marginStart="24dp"
                android:background="@drawable/calendar_icon"
                android:contentDescription="@string/calendar" />

            <ImageButton
                android:id="@+id/socialBtn"
                android:layout_width="54dip"
                android:layout_height="54dip"
                android:layout_marginStart="24dp"
                android:background="@drawable/social_icon2"
                android:contentDescription="@string/social" />

            <ImageButton
                android:id="@+id/mapsBtn"
                android:layout_width="41dip"
                android:layout_height="54dip"
                android:layout_marginStart="24dp"
                android:background="@drawable/maps_icon"
                android:contentDescription="@string/map" />

            <ImageButton
                android:id="@+id/moreBtn"
                android:layout_width="54dip"
                android:layout_height="54dip"
                android:layout_marginStart="18dp"
                android:background="@drawable/more_icon"
                android:contentDescription="@string/more" />


        </LinearLayout>
    </TableLayout>

</RelativeLayout>
