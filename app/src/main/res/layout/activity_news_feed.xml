<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kent.kentapp.MainMenu">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:rowCount="9"
        android:columnCount="9"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/house_colour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="7"
            android:layout_margin="2dp"
            android:layout_marginBottom="5dp"
            android:layout_row="0"
            android:height="8dp"
            android:background="@color/kent_gold" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="37.5dp"
            android:layout_height="30dp"
            android:layout_column="6"
            android:layout_gravity="center"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="5dp"
            android:layout_row="2"
            android:clickable="true"
            android:contentDescription="@string/contentDescriptionlogo"
            android:src="@drawable/ksapplogonobackground" />

        <TextView
            android:id="@+id/divide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_margin="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="8dp"
            android:layout_row="3"
            android:height="3dp"
            android:background="@android:color/darker_gray" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_row="3"
            android:layout_rowSpan="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/news_hyp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="15dp"
                    android:width="35dp"
                    android:ems="10"
                    android:text="@string/news"
                    android:textColor="@color/kent_blue"
                    android:textStyle="bold"
                    android:onClick=""/>

                <TextView
                    android:id="@+id/profile_hyp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="15dp"
                    android:width="42dp"
                    android:ems="10"
                    android:text="@string/profile" />

                <TextView
                    android:id="@+id/calendar_hyp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="15dp"
                    android:width="55dp"
                    android:ems="10"
                    android:text="@string/calendar" />


                <TextView
                    android:id="@+id/friends_hyp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="15dp"
                    android:width="46dp"
                    android:ems="10"
                    android:text="@string/friends" />


                <TextView
                    android:id="@+id/map_hyp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="15dp"
                    android:width="35dp"
                    android:ems="10"
                    android:text="@string/btnMap" />

                <TextView
                    android:id="@+id/social_hyp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="15dp"
                    android:width="40dp"
                    android:ems="10"
                    android:text="@string/social" />

                <TextView
                    android:id="@+id/video_hyp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="15dp"
                    android:width="43dp"
                    android:ems="10"
                    android:text="@string/video" />

                <TextView
                    android:id="@+id/photos_hyp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="15dp"
                    android:width="48dp"
                    android:ems="10"
                    android:text="@string/photo" />

                <TextView
                    android:id="@+id/directory_hyp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:width="60dp"
                    android:ems="10"
                    android:text="@string/directory" />


                <TextView
                    android:id="@+id/settings_hyp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:width="60dp"
                    android:ems="10"
                    android:text="@string/more" />

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/divide2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_margin="2dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:layout_row="4"
            android:height="3dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/news_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_gravity="end"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_row="5"
            android:width="290dp"
            android:height="20dp"
            android:background="@color/kent_translucent"
            android:ems="10"
            android:text="@string/news_feed"
            android:textAlignment="viewEnd"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_marginBottom="10dp"
            android:layout_row="6"
            android:layout_rowSpan="3"
            android:width="180dp"
            android:height="245dp"/>

    </GridLayout>

</RelativeLayout>
