<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Friends">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:columnCount="8"
        android:rowCount="12">

        <TextView
            android:id="@+id/friends_title"
            style="@style/page_header"
            android:layout_column="1"
            android:layout_columnSpan="7"
            android:layout_row="1"
            android:text="@string/friends" />


        <TextView
            android:id="@+id/divide"
            style="@style/divide"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:layout_row="2"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/friends_recommendations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="7"
            android:layout_gravity="end"
            android:layout_row="3"
            android:width="150dp"
            android:background="@color/kent_light_grey"
            android:text="@string/friends_recommendations"
            android:textAlignment="textEnd"
            android:textSize="14sp" />


        <ImageButton
            android:id="@+id/profile_pic"
            android:layout_column="1"
            android:layout_row="4"
            android:src="@drawable/avatar2"
            style="@style/small_user_image"
            android:contentDescription="@string/friends_recommendations"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:height="30dp"
            android:text="@string/friends" />

        <ImageButton
            android:id="@+id/profile_pic2"
            android:layout_column="2"
            android:layout_row="4"
            android:src="@drawable/avatar2"
            style="@style/small_user_image"
            android:contentDescription="@string/friends_recommendations" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="5"
            android:height="30dp"
            android:text="@string/friends" />

        <ImageButton
            android:id="@+id/profile_pic3"
            android:layout_column="3"
            android:layout_row="4"
            android:src="@drawable/avatar2"
            style="@style/small_user_image"
            android:contentDescription="@string/friends_recommendations"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="5"
            android:height="30dp"
            android:text="@string/friends" />

        <ImageButton
            android:id="@+id/profile_pic4"
            android:layout_column="4"
            android:layout_row="4"
            android:src="@drawable/avatar2"
            style="@style/small_user_image"
            android:contentDescription="@string/friends_recommendations"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="5"
            android:height="30dp"
            android:text="@string/friends" />

        <TextView
            android:id="@+id/divide2"
            style="@style/divide"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:layout_row="6"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/friend_sub_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="7"
            android:layout_gravity="end"
            android:layout_row="7"
            android:width="85dp"
            android:background="@color/kent_translucent"
            android:text="@string/friends"
            android:textAlignment="textEnd"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/friend_selections"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_column="1"
            android:layout_columnSpan="7"
            android:layout_row="8"
            android:layout_rowSpan="1"
            android:isScrollContainer="true" />
    </GridLayout>

    <TableLayout
        android:id="@+id/user_menu"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/divide4"
            style="@style/divide"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/menuBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/newsBtn"
                android:layout_width="48dip"
                android:layout_height="54dip"
                android:contentDescription="@string/news"
                android:background="@drawable/news_icon"
                android:layout_marginStart="17dp"/>

            <ImageButton
                android:id="@+id/calendarBtn"
                android:layout_width="42dip"
                android:layout_height="54dip"
                android:contentDescription="@string/calendar"
                android:background="@drawable/calendar_icon"
                android:layout_marginStart="24dp"/>

            <ImageButton
                android:id="@+id/socialBtn"
                android:layout_width="54dip"
                android:layout_height="54dip"
                android:contentDescription="@string/social"
                android:background="@drawable/social_icon2"
                android:layout_marginStart="24dp"/>

            <ImageButton
                android:id="@+id/mapsBtn"
                android:layout_width="41dip"
                android:layout_height="54dip"
                android:contentDescription="@string/maps"
                android:background="@drawable/maps_icon"
                android:layout_marginStart="24dp"/>

            <ImageButton
                android:id="@+id/moreBtn"
                android:layout_width="54dip"
                android:layout_height="54dip"
                android:layout_marginStart="18dp"
                android:contentDescription="@string/more"
                android:background="@drawable/more_icon"/>


        </LinearLayout>

    </TableLayout>

</RelativeLayout>
