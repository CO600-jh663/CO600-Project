<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Friends">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:columnCount="8"
        android:rowCount="13">

        <TextView
            android:id="@+id/friends_title"
            style="@style/page_header"
            android:layout_column="1"
            android:layout_columnSpan="7"
            android:layout_row="1"
            android:text="@string/friends" />

        <TextView
            android:id="@+id/divide"
            style="@style/divide"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:layout_row="2"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/friends_recommendations"
style="@style/text_subtitle"
            android:layout_marginBottom="7dp"
            android:layout_row="3"
            android:width="200dp"
            android:text="@string/friends_recommendations"
            android:textSize="18sp" />

        <HorizontalScrollView
            android:id="@+id/scroll_menu"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_columnSpan="7"
            android:layout_row="4"
            android:layout_rowSpan="2"
            android:scrollbars="none"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <GridLayout
                    android:id="@+id/gridLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:columnCount="4"
                    android:rowCount="2">

                    <Button
                        android:id="@+id/recommendedFriendBtn"
                        style="@style/small_user_image"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:contentDescription="@string/friends_recommendations"
                        android:background="@drawable/avatar2" />

                    <TextView
                        android:layout_column="0"
                        android:layout_row="1"
                        style="@style/small_user_text" />

                    <Button
                        android:id="@+id/profile_pic2"
                        style="@style/small_user_image"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:contentDescription="@string/friends_recommendations"
                        android:background="@drawable/avatar2" />

                    <TextView
                        android:layout_column="1"
                        android:layout_row="1"
                        style="@style/small_user_text" />

                    <Button
                        android:id="@+id/profile_pic3"
                        style="@style/small_user_image"
                        android:layout_column="2"
                        android:layout_row="0"
                        android:contentDescription="@string/friends_recommendations"
                        android:background="@drawable/avatar2" />

                    <TextView
                        android:layout_column="2"
                        android:layout_row="1"
                        style="@style/small_user_text" />

                    <Button
                        android:id="@+id/profile_pic4"
                        style="@style/small_user_image"
                        android:layout_column="3"
                        android:layout_row="0"
                        android:contentDescription="@string/friends_recommendations"
                        android:background="@drawable/avatar2" />

                    <TextView
                        android:layout_column="3"
                        android:layout_row="1"
                        style="@style/small_user_text" />

                </GridLayout>

            </RelativeLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/divide2"
            style="@style/divide"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:layout_row="6"
            android:background="@color/common_action_bar_splitter" />

        <TextView
            android:id="@+id/friend_sub_section"
style="@style/text_subtitle"
            android:layout_marginBottom="5dp"
            android:width="120dp"
            android:text="@string/friends"
 />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_column="1"
            android:layout_columnSpan="7"
            android:layout_row="8"
            android:layout_rowSpan="3">


            <RelativeLayout
                android:id="@+id/friends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <GridLayout
                    android:id="@+id/gridLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:columnCount="4"
                    android:rowCount="4">

                    <Button
                        android:id="@+id/friendBtn"
                        style="@style/small_user_image"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:contentDescription="@string/friends_recommendations"
                        android:background="@drawable/avatar2" />

                    <TextView
                        android:layout_column="0"
                        android:layout_row="1"
                        style="@style/small_user_text"
                        android:layout_marginStart="0dp"/>

                    <Button
                        android:id="@+id/society_pic2"
                        style="@style/small_user_image"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:contentDescription="@string/friends_recommendations"
                        android:background="@drawable/avatar2" />

                    <TextView
                        android:layout_column="1"
                        android:layout_row="1"
                        style="@style/small_user_text"/>

                    <Button
                        android:id="@+id/society_pic3"
                        style="@style/small_user_image"
                        android:layout_column="2"
                        android:layout_row="0"
                        android:contentDescription="@string/friends_recommendations"
                        android:background="@drawable/avatar2" />

                    <TextView
                        style="@style/small_user_text"
                        android:layout_column="2"
                        android:layout_row="1" />

                    <Button
                        android:id="@+id/society_pic4"
                        style="@style/small_user_image"
                        android:layout_column="3"
                        android:layout_row="0"
                        android:contentDescription="@string/friends_recommendations"
                        android:background="@drawable/avatar2" />

                    <TextView
                        android:layout_column="3"
                        android:layout_row="1"
                        style="@style/small_user_text"/>

                    <Button
                        android:id="@+id/society_pic5"
                        style="@style/small_user_image"
                        android:layout_column="0"
                        android:layout_row="2"
                        android:contentDescription="@string/friends_recommendations"
                        android:src="@drawable/avatar2"
                        android:layout_marginStart="0dp"/>

                    <TextView
                        android:layout_column="0"
                        android:layout_row="3"
                        style="@style/small_user_text"
                        android:layout_marginStart="0dp"/>

                    <Button
                        android:id="@+id/society_pic6"
                        style="@style/small_user_image"
                        android:layout_column="1"
                        android:layout_row="2"
                        android:contentDescription="@string/friends_recommendations"
                        android:src="@drawable/avatar2" />

                    <TextView
                        android:layout_column="1"
                        android:layout_row="3"
                        style="@style/small_user_text" />

                    <Button
                        android:id="@+id/society_pic7"
                        style="@style/small_user_image"
                        android:layout_column="2"
                        android:layout_row="2"
                        android:contentDescription="@string/friends_recommendations"
                        android:src="@drawable/avatar2" />

                    <TextView
                        android:layout_column="2"
                        android:layout_row="3"
                        style="@style/small_user_text" />

                    <Button
                        android:id="@+id/society_pic8"
                        style="@style/small_user_image"
                        android:layout_column="3"
                        android:layout_row="2"
                        android:contentDescription="@string/friends_recommendations"
                        android:src="@drawable/avatar2" />

                    <TextView
                        style="@style/small_user_text"
                        android:layout_column="3"
                        android:layout_row="3" />
                </GridLayout>

            </RelativeLayout>

        </ScrollView>

    </GridLayout>

    <TableLayout
        android:id="@+id/user_menu"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/divide_menu"
            style="@style/divide"
            android:background="@color/common_action_bar_splitter" />

        <LinearLayout
            android:id="@+id/menuBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/newsBtn"
                android:layout_width="48dip"
                android:layout_height="54dip"
                android:background="@drawable/news_icon"
                android:contentDescription="@string/news" />

            <ImageButton
                android:id="@+id/calendarBtn"
                android:layout_width="42dip"
                android:layout_height="54dip"
                android:layout_marginStart="25dp"
                android:background="@drawable/calendar_icon"
                android:contentDescription="@string/calendar" />

            <ImageButton
                android:id="@+id/mapsBtn"
                android:layout_width="41dip"
                android:layout_height="54dip"
                android:layout_marginStart="25dp"
                android:background="@drawable/maps_icon"
                android:contentDescription="@string/maps" />

            <ImageButton
                android:id="@+id/computerBtn"
                android:layout_width="41dip"
                android:layout_height="54dip"
                android:layout_marginStart="25dp"
                android:background="@drawable/free_pcs"
                android:contentDescription="@string/free_computers" />

            <ImageButton
                android:id="@+id/moreBtn"
                android:layout_width="54dip"
                android:layout_height="54dip"
                android:layout_marginStart="25dp"
                android:background="@drawable/more_icon"
                android:contentDescription="@string/more" />
        </LinearLayout>
    </TableLayout>

</RelativeLayout>
