<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kent.kentapp.MainMenu">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/menu"
            android:text="@string/menu"
            android:layout_row="0"
            android:layout_column="5"
            android:layout_marginStart="70dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/user_full_name"
            android:id="@+id/homeTitle"
            android:layout_row="1"
            android:layout_column="1"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_row="2"
            android:layout_column="1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/profileLink"
            android:text="@string/profile"
            android:layout_row="2"
            android:layout_column="2"
            android:width="50dp"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:id="@+id/divide"
            android:background="@android:color/darker_gray"
            android:height="60dp"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_columnSpan="2" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/friendsLink"
            android:text="@string/fiends"
            android:layout_row="3"
            android:layout_column="2"
            android:width="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/calederLink"
            android:text="@string/calender"
            android:layout_row="2"
            android:layout_column="4"
            android:width="60dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/societies"
            android:text="@string/societies"
            android:layout_row="3"
            android:layout_column="4"
            android:width="60dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/divide2"
            android:background="@android:color/darker_gray"
            android:height="3dp"
            android:layout_margin="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnSpan="8"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/function"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:width="140dp"
            android:height="120dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/video"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:width="140dp"
            android:height="120dp"
            android:layout_marginBottom="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/news"
            android:text="@string/news_and_events"
            android:layout_row="5"
            android:layout_column="4"
            android:layout_columnSpan="2"
            android:layout_rowSpan="3"
            android:width="180dp"
            android:height="255dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:text="@string/directory"
            android:layout_row="8"
            android:layout_column="1"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:text="@string/maps"
            android:layout_row="8"
            android:layout_column="4"
            android:layout_marginEnd="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="-50dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button3"
            android:layout_row="8"
            android:layout_column="5"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center"/>


    </GridLayout>

</RelativeLayout>
