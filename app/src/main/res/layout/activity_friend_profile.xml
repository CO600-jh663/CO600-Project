<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/layout"
    tools:context="kent.kentapp.Profile">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:columnCount="8"
        android:rowCount="11">

        <TextView
            android:id="@+id/house_colour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_marginBottom="5dp"
            android:layout_row="0"
            android:height="8dp"
            android:background="@color/kent_gold" />


        <ImageButton
            android:id="@+id/profile_pic"
            android:layout_width="110dp"
            android:layout_height="105dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:clickable="true"
            android:src="@drawable/avatar2"
            android:onClick="onLongClick"
            android:contentDescription="@string/profile_description"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnSpan="5"
            android:layout_marginTop="12dp"
            android:layout_row="1"
            android:text="@string/friends_profile"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/add_friend"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_column="2"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="42dp"
            android:layout_marginStart="4dp"
            android:layout_row="2"
            android:clickable="true"
            android:contentDescription="@string/add_friend"
            android:background="@drawable/add_icon" />

        <TextView
            android:id="@+id/divide"
            style="@style/divide"
            android:layout_column="0"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="4dp"
            android:layout_row="3"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/about_you"
            style="@style/text_subtitle"
            android:layout_marginBottom="5dp"
            android:text="@string/bio"
            android:layout_row="4"
            android:width="180dp"
            android:height="24dp" />

        <EditText
            android:id="@+id/add_degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_marginBottom="5dp"
            android:layout_row="5"
            android:height="40dp"
            android:ems="10"
            android:hint="@string/degree"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/add_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_marginBottom="2dp"
            android:layout_row="6"
            android:layout_rowSpan="1"
            android:height="40dp"
            android:ems="10"
            android:hint="@string/existing_bio"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/languages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_marginBottom="2dp"
            android:layout_row="7"
            android:layout_rowSpan="1"
            android:height="40dp"
            android:ems="10"
            android:hint="@string/existing_bio"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/friends"
            style="@style/text_subtitle"
            android:layout_marginBottom="5dp"
            android:layout_row="8"
            android:width="290dp"
            android:text="@string/friends" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_column="1"
            android:layout_columnSpan="7"
            android:layout_row="9"
            android:layout_rowSpan="2">


            <RelativeLayout
                android:id="@+id/friends_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <GridLayout
                    android:id="@+id/gridLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:columnCount="8"
                    android:rowCount="4"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/friendBtn"
                        style="@style/small_user_image"
                        android:layout_marginStart="0dp"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:contentDescription="@string/friends_recommendations"
                        android:src="@drawable/avatar2" />

                    <TextView
                        android:layout_column="1"
                        android:layout_row="1"
                        style="@style/small_user_text"
                        android:layout_marginStart="0dp"/>

                    <ImageButton
                        android:id="@+id/society_pic2"
                        style="@style/small_user_image"
                        android:layout_column="2"
                        android:layout_row="0"
                        android:contentDescription="@string/friends_recommendations"
                        android:src="@drawable/avatar2" />

                    <TextView
                        android:layout_column="2"
                        android:layout_row="1"
                        style="@style/small_user_text" />

                    <ImageButton
                        android:id="@+id/society_pic3"
                        style="@style/small_user_image"
                        android:layout_column="3"
                        android:layout_row="0"
                        android:contentDescription="@string/friends_recommendations"
                        android:src="@drawable/avatar2" />

                    <TextView
                        android:layout_column="3"
                        android:layout_row="1"
                        style="@style/small_user_text"/>

                    <ImageButton
                        android:id="@+id/society_pic4"
                        style="@style/small_user_image"
                        android:layout_column="4"
                        android:layout_row="0"
                        android:contentDescription="@string/friends_recommendations"
                        android:src="@drawable/avatar2" />

                    <TextView
                        android:layout_column="4"
                        android:layout_row="1"
                        style="@style/small_user_text" />

                </GridLayout>

            </RelativeLayout>

        </ScrollView>

    </GridLayout>

    <TableLayout
        android:id="@+id/user_menu"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/divide_menu"
            style="@style/divide"
            android:background="@color/common_action_bar_splitter" />

        <LinearLayout
            android:id="@+id/menuBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/newsBtn"
                android:layout_width="48dip"
                android:layout_height="54dip"
                android:background="@drawable/news_icon"
                android:contentDescription="@string/news" />

            <ImageButton
                android:id="@+id/calendarBtn"
                android:layout_width="42dip"
                android:layout_height="54dip"
                android:layout_marginStart="25dp"
                android:background="@drawable/calendar_icon"
                android:contentDescription="@string/calendar" />

            <ImageButton
                android:id="@+id/mapsBtn"
                android:layout_width="41dip"
                android:layout_height="54dip"
                android:layout_marginStart="25dp"
                android:background="@drawable/maps_icon"
                android:contentDescription="@string/maps" />

            <ImageButton
                android:id="@+id/computerBtn"
                android:layout_width="41dip"
                android:layout_height="54dip"
                android:layout_marginStart="25dp"
                android:background="@drawable/free_pcs"
                android:contentDescription="@string/free_computers" />

            <ImageButton
                android:id="@+id/moreBtn"
                android:layout_width="54dip"
                android:layout_height="54dip"
                android:layout_marginStart="25dp"
                android:background="@drawable/more_icon"
                android:contentDescription="@string/more" />
        </LinearLayout>
    </TableLayout>
</RelativeLayout>
